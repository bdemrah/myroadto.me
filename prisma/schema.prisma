// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  language  String   @default("tr")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@map("users")
}

model Order {
  id              String    @id @default(cuid())
  userId          String
  packageType     String    // 'basic', 'premium', 'pro'
  amount          Int       // in cents
  currency        String    // 'TRY', 'USD'
  stripeSessionId String?
  stripePaymentId String?
  status          String    @default("pending") // 'pending', 'paid', 'failed', 'refunded'
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id])
  formSubmission  FormSubmission?
  accessTokens    FormAccessToken[]

  @@map("orders")
}

model FormSubmission {
  id          String   @id @default(cuid())
  orderId     String   @unique
  answers     Json
  aiAnalysis  String?
  pdfPath     String?
  status      String   @default("submitted") // 'submitted', 'processing', 'completed', 'failed'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  order       Order    @relation(fields: [orderId], references: [id])

  @@map("form_submissions")
}

model FormAccessToken {
  id        String    @id @default(cuid())
  orderId   String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  status    String    @default("active") // 'active', 'used', 'expired'
  createdAt DateTime  @default(now())
  order     Order     @relation(fields: [orderId], references: [id])

  @@map("form_access_tokens")
}
